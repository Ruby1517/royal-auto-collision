# Copy this file to .env (or .env.local) and fill in your Firebase Web SDK keys
# These are public keys for the client SDK and safe to expose to the browser.

NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Base URL for server-side fetches (set to your deployed URL in prod)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# If true, new testimonials are visible immediately (no moderation)
AUTO_APPROVE_TESTIMONIALS=false
